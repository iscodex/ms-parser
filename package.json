{
  "name": "@iscodex/ms-parser",
  "version": "1.0.1",
  "type": "module",
  "description": "A lightweight, TypeScript-first library for parsing and formatting time durations with human-readable strings",
  "main": "dist/index.cjs",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest --verbose",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:debug": "jest --detectOpenHandles --forceExit --verbose",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run lint && pnpm run type-check && pnpm run test && pnpm run build",
    "release": "np"
  },
  "keywords": [
    "time",
    "duration",
    "parser",
    "formatter",
    "ms",
    "milliseconds",
    "typescript"
  ],
  "author": "Francisco Luis Rios Vega <alckordev@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/iscodex/ms-parser.git"
  },
  "bugs": {
    "url": "https://github.com/iscodex/ms-parser/issues"
  },
  "homepage": "https://github.com/iscodex/ms-parser#readme",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "np": "^10.2.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.50.2",
    "ts-jest": "^29.4.3",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.0.0"
}
